# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,html,jade,md}]
indent_size = 4

[package.json]
indent_size = 2

[*.js]
jslint_happy = true
